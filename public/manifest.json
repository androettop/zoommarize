{
    "manifest_version": 3,
    "name": "Zoommarizer",
    "description": "Summarize your Zoom meetings",
    "version": "0.1",
    "action": {
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },
    "content_scripts": [
        {
            "world": "MAIN",
            "matches": ["https://*.zoom.us/wc/*"],
            "js": ["capture-state.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["https://*.zoom.us/wc/*"],
            "js": ["start.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "storage"
    ]
}
